<style>
  button {
    background-color: #6042BC;
    border: 0;
  }

  h1 {
    margin-top: 15px;
  }

  h2 {
  margin-bottom: 0;
  }

  ul {
  list-style-type: none;
  margin-top: 20px;
  }
</style>

<span style="float: right;">
  <%= link_to "View Cart", cart_path %>
</span>

<%= turbo_frame_tag "product-#{@product.sku}" do %>
  <%= render partial: "product", locals: { product: @product } %>
<% end %>

<script>
  window.productSku = '<%= @product.sku %>';
</script>
